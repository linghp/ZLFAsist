<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <include layout="@layout/title_bar"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        />
    <RelativeLayout
                android:id="@+id/add_btn"
                style="@style/left_drawer_item_layout" >

                <TextView
                    style="@style/left_drawer_item_text"
                    android:drawableLeft="@drawable/ic_drawer_search_normal"
                    android:text="@string/follow" />
            </RelativeLayout>

            <ImageView style="@style/left_drawer_item_line" />
   <RelativeLayout
                android:id="@+id/favor_btn"
                style="@style/left_drawer_item_layout" >

                <TextView
                    style="@style/left_drawer_item_text"
                    android:drawableLeft="@drawable/ic_drawer_search_normal"
                    android:text="@string/favor" />
            </RelativeLayout>


            <ImageView style="@style/left_drawer_item_line" />
            <RelativeLayout
                android:id="@+id/down_btn"
                style="@style/left_drawer_item_layout" >

                <TextView
                    style="@style/left_drawer_item_text"
                    android:drawableLeft="@drawable/ic_drawer_search_normal"
                    android:text="@string/download" />
            </RelativeLayout>

            <ImageView style="@style/left_drawer_item_line" />
            <RelativeLayout
                android:id="@+id/mes_btn"
                style="@style/left_drawer_item_layout" >

                <TextView
                    android:id="@+id/tv_ref_update"
                    style="@style/left_drawer_item_text"
                    android:drawableLeft="@drawable/ic_drawer_search_normal"
                    android:text="@string/notification" />
            </RelativeLayout>

            <ImageView style="@style/left_drawer_item_line" />
          

</LinearLayout>
