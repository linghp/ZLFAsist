<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/ly_left"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@drawable/searchbar_textfield_background"
        android:padding="2dp"
        android:orientation="horizontal" >
        
    <LinearLayout
        android:id="@+id/ly_left_contain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">      
        <ImageView
            android:id="@+id/img_search_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8.0dip"
            android:paddingLeft="12.0dip"
            android:paddingRight="10.0dip"
            android:src="@drawable/searchbar_textfield_search_icon"
            android:paddingTop="8.0dip"
            
             />

        

     </LinearLayout>     

        <EditText
            android:id="@+id/et_search_keyword"
            android:layout_width="fill_parent"
            android:layout_height="32.0dip"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:imeOptions="actionSearch"
            android:singleLine="true"
            android:hint="中文期刊搜索"           
            android:textSize="14.0sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/icon_btn_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingRight="4.0dip"
        android:src="@drawable/search_clear_btn_normal"
        android:visibility="gone" />

</RelativeLayout>