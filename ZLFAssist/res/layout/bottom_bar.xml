<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48.0dip"
    android:background="@color/bottom_bar_color"
    android:gravity="center"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/btn_item_favor"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableTop="@drawable/favor"
        android:ellipsize="marquee"
        android:gravity="center"
        android:paddingBottom="3dip"
        android:text="收藏"
        android:textSize="9sp" />

    <TextView
        android:id="@+id/btn_item_share"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableTop="@android:drawable/ic_menu_share"
        android:ellipsize="marquee"
        android:gravity="center"
        android:paddingBottom="3dip"
        android:text="分享"
        android:textSize="9sp" />

    <TextView
        android:id="@+id/btn_item_read"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableTop="@android:drawable/ic_menu_view"
        android:ellipsize="marquee"
        android:gravity="center"
        android:paddingBottom="3dip"
        android:text="阅读"
        android:textSize="9sp" />

</LinearLayout>